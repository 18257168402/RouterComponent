<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--除了bottom，其他地方都向外offset，这样其他四个方向都没边框了-->
    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="#657596"
                android:width="1dp" />

            <padding android:bottom="10dp"/>

        </shape>
    </item>

</layer-list>